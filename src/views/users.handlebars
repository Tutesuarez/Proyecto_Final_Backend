<section class="cart_container">
  <h2 id="cart" data-id="{{_id}}" class="my-2 text-center">Users</h2>
  <article class="container border rounded p-2">
    <table class="table table-striped">
      <thead class="rounded">
        <tr>
          <th scope="col">FirstName</th>
          <th scope="col">LastName</th>
          <th scope="col">Email</th>
          <th scope="col">Role</th>
          <th scope="col">Last Connection</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody class="rounded" id="users">
        {{#each users}}
        <tr>
          <td><strong>{{this.first_name}}</strong></td>
          <td><strong>{{this.last_name}}</strong></td>
          <td><strong>{{this.email}}</strong></td>
          <td><strong>{{this.role}}</strong></td>
          <td><strong>{{this.last_connection}}</strong></td>
          <td class="text-center">
            <button class="btn btn-outline-primary " data-id="{{this._id}}">Change Role</button>
          </td>
          <td class="text-center">
            <button class="btn btn-outline-danger " data-id="{{this._id}}">Delete User</button>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </article>
</section>
<section class="cart_container ms-3">
  <div class="d-flex align-items-end ms-5 ps-5 mt-3">
    <a class="btn btn-outline-danger" id="delete-innactive">Delete Innactive Users</a>
  </div>
</section>

<script src="/js/users.js"></script>